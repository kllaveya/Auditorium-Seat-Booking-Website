<%- include("./partials/header"); -%>

   <body class="signup-body">

      <div class="row pad-grid">
         <div class="col-lg-6 text-signup">
            <h1 class="p-signup">Having a boring weekend? Lose yourself in the world of ecstasy - where you find music,
               dance, love, thrill and... yourself. Once again.</h1>
         </div>
         <div class="col-lg-6">
            <div class="login">
               <form class="form-floating form-signup" action="/signupBusiness" method="post">
                  <div class="inputarea">
                     <h1>The Solution!</h1><br>
                     <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="nameOfCompany" id="floatingName"
                           placeholder="Name of Company">
                        <label for="floatingInput">Name of Company</label>
                     </div>
                     <div class="form-floating mb-3">
                        <textarea class="form-control" id="floatingAddress" name="Address"
                           placeholder="Address"></textarea>
                        <label for="floatingAddress">Address</label>
                     </div>
                     <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingNumber" name="ContactNumber"
                           placeholder="XXXXX">
                        <label for="floatingNumber">Contact Number</label>
                     </div>
                     <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="floatingEmail" name="emailAddress"
                           placeholder="name@example.com">
                        <label for="floatingEmail">Email Address (same as before)</label>
                     </div><br>
                     <div class="d-grid gap-2">
                        <button class="btn btn-primary" type="submit">Sign Up!</button>
                     </div><br>
                  </div>
               </form>
            </div>
         </div>
      </div>

      <%- include("./partials/footerBootstrap"); -%>